<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, html: { class:"form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :title, class: "form-control", autofocus: true,
            placeholder: "Enter Title of the article" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-6">
        <%= f.text_area :description, rows: 10, class: "form-control", autofocus: true,
            placeholder: "Enter Description for the article" %>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <%= cb.label(class: "checkbox-inline input-checkbox") {
                 cb.check_box(class: "checkbox") + cb.text.humanize } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
    <br>

    <div class="col-xs-offset-4 col-xs-4">
      <%= link_to 'Cancel and return back to the Articles', articles_path %>
    </div>
  </div>
</div>